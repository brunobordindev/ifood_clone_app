<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_pedido_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Cliente"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/text_pedido_endereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o"/>

    <TextView
        android:id="@+id/text_pedido_pagamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagamento"/>

    <TextView
        android:id="@+id/text_pedido_obs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Obs"/>

    <TextView
        android:id="@+id/text_pedido_itens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Itens"
        android:textColor="@color/red_dark"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/darker_gray"/>

</LinearLayout>